#!/usr/bin/expect -f

set wd [file tail [pwd]]
spawn -noecho zsh -li
expect_before {
  -re {\e]([07]|1337);[^\a]*\a} { exp_continue } ; # match escape sequences to be ignored
}
expect {
  $wd { send ":\r" } ; # match working dir at prompt
  timeout { exit 1 }
}
expect {
  $wd { } ; # match working dir at prompt
  timeout { exit 1 }
}
sleep 1
send "exit\r"
